@using HocPhi.Models
@model Login
    @{
        ViewBag.Title = "Login";
        Layout = null;
    }
   
    <!DOCTYPE HTML>
    <html lang="en">
    <head>

        <script type="application/x-javascript">
             addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
            function hideURLbar(){ window.scrollTo(0,1); } </script>
        <!-- Meta tag Keywords -->
        <!-- css files -->
        <link rel="stylesheet" href="~/Content/css/style.css" type="text/css" media="all" /> <!-- Style-CSS -->
        <link rel="stylesheet" href="~/Content/font-awesome.css" > <!-- Font-Awesome-Icons-CSS -->

    </head>
    <body>
        @using (Html.BeginForm("Login","Home", FormMethod.Post))
        {

            <!-- main -->
            <div class="center-container">
                <!--header-->
                <!--//header-->
                <div class="main-content-agile">
                    <div class="sub-main-w3">
                        <div class="wthree-pro">
                            <h2>Đăng Nhập</h2>
                        </div>
                        <form action="#" method="post">
                            <div class="pom-agile">

                                @Html.TextBoxFor(a => a.Email, new { type = "Email", placeholder = "Email", @class = "user" })
                                <span class="icon1"><i class="fa fa-user" aria-hidden="true"></i></span>
                            </div>
                            <div class="pom-agile">
                                @Html.TextBoxFor(a => a.MatKhau, new { type = "password", placeholder = "Password", @class = "pass" })
                                <span class="icon2"><i class="fa fa-unlock" aria-hidden="true"></i></span>
                            </div>                         
                            <div class="sub-w3l">
                                <div class="right-w3l">
                                    <input type="submit" value="Login">
                                    <center><h4 style="color:red;">@ViewBag.SuccessMessage</h4></center>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!--//main-->
                <!--footer-->
                <!--//footer-->
            </div>
        }
    </body>
</html>
