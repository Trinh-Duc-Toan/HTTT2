@model IEnumerable<HocPhi.Models.HocSinh>
@{
    ViewBag.Title = "HocSinh";
    Layout = null;
}


<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Analytics Dashboard - This is an example dashboard created using build-in elements and components.</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="This is an example dashboard created using build-in elements and components.">
    <meta name="msapplication-tap-highlight" content="no">
   
    <link href="~/Content/main.css" rel="stylesheet" />
    <link href="~/Content/css/theme.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.20/datatables.min.css" />
    <script type="text/javascript" src="~/Content/s3/datatable.js"></script>
</head>
<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <div class="app-header header-shadow">
            <div class="app-header__logo">
                <img src="~/Content/assets/images/school.png" />
                <div class="header__pane ml-auto">
                    <div>
                        <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>


            <div class="app-header__content">
                <div class="app-header-left">
                    <div class="search-wrapper">
                        <div class="input-holder">
                            <input type="text" class="search-input" placeholder="Type to search">
                            <button class="search-icon"><span></span></button>
                        </div>
                        <button class="close"></button>
                    </div>
                </div>
                <div class="app-header-right">
                    <div class="app-header-right">
                        <div class="header-btn-lg pr-0">
                            <div class="widget-content p-0">
                                @if (Session["Admin"] != null)
                                {
                                    <div class="widget-content-wrapper">
                                        <div class="widget-content-left">
                                            <div class="btn-group">

                                                <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                                    <img src="@Url.Content("~/Content/images/icon/"+ @Session["AdHinh"])" width="42" class="rounded-circle">
                                                    <i class="fa fa-angle-down ml-2 opacity-8"></i>
                                                </a>
                                                <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                                    <a type="button" href="@Url.Action("exit", "Admin")" tabindex="0" class="dropdown-item">Đăng Xuất</a>

                                                </div>

                                            </div>

                                        </div>
                                        <div class="widget-content-left  ml-3 header-user-info">
                                            <div class="widget-heading">
                                                @Session["Admin"]
                                            </div>
                                            <div class="widget-subheading">
                                                
                                            </div>
                                        </div>

                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="app-main">
            <div class="app-sidebar sidebar-shadow">
                <div class="app-header__logo">
                    <div class="logo-src"></div>
                    <div class="header__pane ml-auto">
                        <div>
                            <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                            <span class="btn-icon-wrapper">
                                <i class="fa fa-ellipsis-v fa-w-6"></i>
                            </span>
                        </button>
                    </span>
                </div>
                <div class="scrollbar-sidebar">
                    <div class="app-sidebar__inner">
                        <ul class="vertical-nav-menu">
                            <li class="app-sidebar__heading">Dashboards</li>
                            <li>
                                <a href="@Url.Action("Index","Admin")">
                                    <i class="metismenu-icon pe-7s-rocket"></i>
                                    Dashboard
                                </a>
                            </li>
                            <li class="app-sidebar__heading">Quản Lý</li>
                            <li>
                                <a href="@Url.Action("HeHoc","Admin") ">
                                    <i class="metismenu-icon fas fa-school"></i>
                                    Quản Lý Hệ Học
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("GiaoVien","Admin")">
                                    <i class="metismenu-icon fas fa-chalkboard-teacher"></i>
                                    Quản Lý Giáo Viên
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("QuanLyTK","Admin")">
                                    <i class="metismenu-icon fas fa-chalkboard-teacher"></i>
                                    Quản Lý Tài Khoản
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Lop","Admin")">
                                    <i class="metismenu-icon fas fa-users-cog"></i>
                                    Quản Lý Lớp Học
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("HocSinh","Admin")" class="mm-active">
                                    <i class="metismenu-icon fas fa-user-friends"></i>
                                    Quản Lý Học Sinh
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="metismenu-icon fas fa-clipboard-check"></i>
                                    Điểm Danh
                                </a>
                                <ul>
                                    <li>
                                        <a href="@Url.Action("ChonLopDiemDanh","Admin")">
                                            <i class="metismenu-icon">
                                            </i>Chọn Lớp Điểm Danh
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index","ThongKe")">
                                            <i class="metismenu-icon">
                                            </i>Thống Kê Điểm Danh
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a href="@Url.Action("BienLai","Admin")">
                                    <i class="metismenu-icon fas fa-money-bill"></i>
                                    Quản Lý Biên Lai
                                </a>
                                <ul>
                                    <li>
                                        <a href="@Url.Action("BienLai","Admin")">
                                            <i class="metismenu-icon">
                                            </i>Biên Lai
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("ThongKeBienLai","ThongKe")">
                                            <i class="metismenu-icon">
                                            </i>Thống Kê Biên Lai
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a href="@Url.Action("ThongKeDoanhThu","ThongKe")">
                                    <i class="metismenu-icon fas fa-money-bill-wave-alt"></i>
                                    Quản Lý Doanh Thu
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("ThongKeCongNo","ThongKe")">
                                    <i class="metismenu-icon fas fa-money-bill-wave-alt"></i>
                                    Quản Lý Công Nợ
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="app-main__outer">
                <div class="app-main__inner">


                    <div class="row">
                        <div class="col-md-6 col-xl-4">

                            <!-- <button class="w3-button w3-xlarge w3-circle w3-teal">+</button> -->

                            <a href="@Url.Action("ThemHocSinh","Admin")" class="button"><span>Thêm </span> </a>
                            <style>
                                .button {
                                    background-color: #00ffff;
                                    border: none;
                                    color: #000000;
                                    text-align: center;
                                    font-weight: bold;
                                    font-size: 20px;
                                    padding: 10px;
                                    width: 150px;
                                    height: 50px;
                                    transition: all 0.5s;
                                    cursor: pointer;
                                    margin: 5px;
                                }

                                    .button span {
                                        cursor: pointer;
                                        display: inline-block;
                                        position: relative;
                                        transition: 0.5s;
                                    }

                                        .button span:after {
                                            content: '\002b';
                                            position: absolute;
                                            opacity: 0;
                                            top: 0;
                                            right: -20px;
                                            transition: 0.5s;
                                        }

                                    .button:hover span {
                                        padding-right: 25px;
                                    }

                                        .button:hover span:after {
                                            opacity: 1;
                                            right: 0;
                                        }
                            </style>

                        </div>


                    </div>
                    <div class="row">
                        <div class="col-lg-12" style="width:auto;">

                            <div class="table-responsive table--no-card m-b-40">
                                <table id="dtBasicExample" class="table table-hover table-fixed">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Mã Học Sinh</th>
                                            <th>Họ Tên</th>
                                            <th>Giới Tính</th>
                                            <th>Năm Sinh</th>
                                            <th>Tên Hệ Học</th>
                                            <th>Tên Lớp</th>
                                            <th>Tên Phụ Huynh</th>
                                            <th>Điện Thoại</th>
                                            <th>Địa Chỉ</th>
                                            <th>Ngày Đăng Ký</th>
                                            <th>Thao Tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if(item.TrangThai == 1)
                                            {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.MaHocSinh)</td>
                                                <td>@Html.DisplayFor(modelItem => item.TenHocSinh)</td>
                                                <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
                                                <td> @Convert.ToDateTime(item.NamSinh).ToString("dd/MM/yyyy")</td>
                                                <td>@Html.DisplayFor(modelItem => item.HeHoc.TenHeHoc)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Lop.TenLop)</td>
                                                <td>@Html.DisplayFor(modelItem => item.TenPhuHuynh)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DienThoai)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DiaChiLienHe)</td>
                                                <td> @Convert.ToDateTime(item.NgayDangKy).ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    <a href="@Url.Action("SuaHocSinh","Admin",new {@mahocsinh = item.MaHocSinh})" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Sửa" style="background-color:#b6ff00"><em class="fas fa-pencil-alt"></em></a>
                                                    <a href="@Url.Action("XoaHocSinh","Admin",new {@mahocsinh = item.MaHocSinh})" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Xóa"><em class="fas fa-trash-alt"></em></a>
                                                </td>
                                            </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();

        });
    </script>

    <script src="~/Content/assets/scripts/main.js"></script>
</body>
</html>

